<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#FF1A1A2E">

    <!-- Logo area -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ax360e"
        android:textSize="48sp"
        android:textColor="#FF16C47F"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xenia Edge for Android"
        android:textSize="16sp"
        android:textColor="#AAFFFFFF"
        android:layout_marginBottom="32dp"/>

    <!-- Status -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializingâ€¦"
        android:textSize="14sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginBottom="32dp"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_open_file"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Open Game (XEX / ISO)"
        android:textAllCaps="false"
        android:backgroundTint="#FF16C47F"
        android:textColor="#FF000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Settings"
        android:textAllCaps="false"
        android:backgroundTint="#FF333366"
        android:textColor="#FFFFFFFF"/>

    <!-- Version info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vera360 v0.1.0-edge | ARM64 Vulkan"
        android:textSize="11sp"
        android:textColor="#55FFFFFF"
        android:layout_marginTop="48dp"/>

</LinearLayout>
